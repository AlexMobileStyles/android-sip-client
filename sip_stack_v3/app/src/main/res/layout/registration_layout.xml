<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/linearmain"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="User Registration"
                    android:id="@+id/textView1"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="SIP Username"
                        android:id="@+id/textView2"
                        android:width="100dp"
                        android:textSize="12dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sipUser"
                        android:textSize="12dp"
                        android:minWidth="50dp"
                        android:hint="Username"
                        android:text="test27"
                        android:singleLine="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="\@"
                        android:id="@+id/textView3" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sipDomain"
                        android:minWidth="50dp"
                        android:textSize="12dp"
                        android:hint="Domain"
                        android:textIsSelectable="false"
                        android:text="cloudsanity.com" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="SIP Password"
                        android:id="@+id/textView6"
                        android:width="100dp"
                        android:textSize="12dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sipPw"
                        android:textSize="12dp"
                        android:hint="Password"
                        android:minWidth="50dp"
                        android:text="1234" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="SIP Server"
                        android:id="@+id/textView4"
                        android:width="100dp"
                        android:textSize="12dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sipServerIp"
                        android:textSize="12dp"
                        android:minWidth="50dp"
                        android:hint="Server IP"
                        android:text="217.78.103.223"
                        android:singleLine="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text=":"
                        android:id="@+id/textView5" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sipServerPort"
                        android:minWidth="50dp"
                        android:textSize="12dp"
                        android:hint="Server Port"
                        android:textIsSelectable="false"
                        android:text="5060" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="SIP Prov Server"
                        android:id="@+id/textView8"
                        android:width="100dp"
                        android:textSize="12dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/provIp"
                        android:textSize="12dp"
                        android:hint="Prov IP"
                        android:minWidth="50dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1" >

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Register"
                        android:id="@+id/btnRgstr"
                        android:background="@drawable/btn_positive"
                        android:enabled="true" />

                    <Space
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight="0.54" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clear Log"
                        android:id="@+id/btnClear"
                        android:enabled="true"
                        android:background="@drawable/btn_default"
                        />

                    <Space
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight="0.54" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unregister"
                        android:id="@+id/btnUnrgstr"
                        android:background="@drawable/btn_negative"
                        android:enabled="false" />

                </LinearLayout>
            </LinearLayout>

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/scrollView6"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/displayLog"
                    android:layout_weight="0.02"
                    android:freezesText="true"
                    />
            </ScrollView>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>